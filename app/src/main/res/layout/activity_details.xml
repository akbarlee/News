<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/text_detail_title"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        </TextView>
                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/img_detail_news"
                    android:layout_width="match_parent"
                    android:src="@drawable/not_available"
                    android:scaleType="fitXY"
                    android:layout_height="250dp">

                </ImageView>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/fbutton_color_amethyst"
                    android:id="@+id/text_detail_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    </TextView>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:id="@+id/text_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/text_detail_detail"
                android:textSize="22sp"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_detail_content"
                        android:maxLines="100"

                        android:textColor="@color/common_google_signin_btn_text_light_pressed"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </ScrollView>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>